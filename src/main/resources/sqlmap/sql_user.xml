<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kantar.mapper.UserMapper">
    <select id="getUserInfo">
        SELECT * FROM KT_USER WHERE idx_user = #{idx_user}
    </select>

    <insert id="savUserInfo">
        INSERT INTO KT_USER (user_id, user_pw, user_type, user_status) VALUES (#{user_id}, #{user_pw}, #{user_type}, #{user_status})
    </insert>
</mapper>